/*
Theme Name: candlelights
*/

input,
textarea,
select,
button {
	padding: 0 10px;
	border: 0 none;
	font-size: 13px;
}
input:focus,
textarea:focus,
select:focus,
button:focus {
	outline: none;
	background-color: #FFFFDD;
}
button span,
.button span {
	color: inherit;
}
@keyframes rotate {
	from {
		-webkit-transform: rotate(0deg);
		-moz-transform: rotate(0deg);
		-ms-transform: rotate(0deg);
		-o-transform: rotate(0deg);
		transform: rotate(0deg);
	}
	to {
		-webkit-transform: rotate(360deg);
		-moz-transform: rotate(360deg);
		-ms-transform: rotate(360deg);
		-o-transform: rotate(360deg);
		transform: rotate(360deg);
	}
}
@-webkit-keyframes rotate {
	from {
		-webkit-transform: rotate(0deg);
		-moz-transform: rotate(0deg);
		-ms-transform: rotate(0deg);
		-o-transform: rotate(0deg);
		transform: rotate(0deg);
	}
	to {
		-webkit-transform: rotate(360deg);
		-moz-transform: rotate(360deg);
		-ms-transform: rotate(360deg);
		-o-transform: rotate(360deg);
		transform: rotate(360deg);
	}
}
.loading {
	margin-right: 0.25em;
}
.loading:after {
	-webkit-animation: rotate 1s infinite linear;
	-moz-animation: rotate 1s infinite linear;
	-ms-animation: rotate 1s infinite linear;
	-o-animation: rotate 1s infinite linear;
	animation: rotate 1s infinite linear;
	display: inline-block;
	width: 1em;
	height: 1em;
	text-align: center;
	line-height: 1;
	font-family: 'Glyphicons Halflings';
	font-weight: normal;
	content: '\E031';

}

/*
 * LAYOUT
 */
html {
}
body {
	overflow-x: hidden;
	background-color: #F5F5F5;
	font-family: Gulim, sans-serif;
}
#header {
	position: fixed;
	z-index: 4;
	top: 0;
	left: 0;
	width: 100%;
	height: 50px;
	overflow: hidden;
	background-color: #FFFFFF;
}
#feature {
	position: fixed;
	z-index: 1;
	top: 50px;
	left: 0;
	width: auto;
	height: auto;
}
#body {
	margin-top: 50px;
	word-break: break-all;
}
#footer {
	position: fixed;
	z-index: 3;
	top: 100%;
	left: 0;
	width: 100%;
}

/*
 * MENU -- general
 */
ul.menu {
	list-style: none;
	float: left;
	margin: 0;
	padding: 0;
}
ul.menu:after {
	content: '';
	display: block;
	clear: both;
}
ul.menu li {
	display: inline-block;
	float: left;
	margin: 0;
	padding: 0;
}
ul.menu li a {
	display: block;
	width: auto;
	height: 50px;
	line-height: 50px;
	text-align: center;
	padding: 0 0.5em;
	color: #8E8282;
}
ul.menu li a:hover {
	text-decoration: none;
	color: #A7DBD9;
}

/*
 * HEADER
 */
#banner {
	float: left;
}
#banner .site-title,
#banner .site-description {
	float: left;
	width: auto;
	margin: 0;
	padding: 0;
}
#banner .site-title a {
	display: block;
	width: 200px;
	height: 50px;
	text-indent: -10000px;
	overflow: hidden;
	background: transparent url('images/title.svg') scroll no-repeat center center;
}
#banner .site-description {
	height: 50px;
	line-height: 50px;
	font-size: 16px;
}
#navigation {
	float: right;
}
#navigation:after {
	content: '';
	display: block;
	clear: both;
}
#navigation {
	margin-right: 150px;
}
#navigation ul#menu-user li.contribute a {
	position: absolute;
	top: 0;
	right: 0;
	width: 150px;
	background-color: #796C6C;
	color: #FFFFFF;
	font-weight: bold;
}
#navigation ul#menu-user li.contribute a:hover {
	background-color: #A7DBD9;
}
/*
 * FEATURE
 */
#map {
	position: relative;
	z-index: 1;
	width: 2000px; /* oversized, and will be resized by script */
	height: 2000px; /* .. */
}
#feature .map-control {
	position: absolute;
	z-index: 2;
	top: 15px;
	border: 2px solid #796C6C;
	background-color: #FFFFFF;
	border-radius: 2px;
	box-shadow: 5px 5px 5px rgba(0,0,0,0.2);
}
#feature .map-control,
#feature .map-control a.button {
	color: #796C6C;
}
#feature .map-control a.button {
	display: block;
	width: 2em;
	height: 2em;
	text-decoration: none;
}
#feature .map-control a.button span {
	display: none;
}
#feature .map-control a.button:hover {
	color: #000000;
}
#feature .map-control a.button:after {
	display: block;
	width: 2em;
	height: 2em;
	line-height: 2em;
	text-align: center;
	font-family: 'Glyphicons Halflings';
}
#feature #zoom-box {
	left: 15px;
}
#zoom-box ul {
	list-style: none;
	margin: 0;
	padding: 0;
}
#zoom-box ul li {
	margin: 0;
	padding: 0;
}
#zoom-box a.button.in:after {
	content: '\2B';
}
#zoom-box a.button.out:after {
	position: relative;
	left: -1px;
	content: '\2212';
}
#feature #locate-here {
	left: 15px;
	top: 90px;
}
#locate-here a.button:after {
	content: '\E062';
}
#feature #search-box {
	right: 15px;
	width: 250px;
}
#search-box * {
	box-sizing: border-box;
}
#search {
	position: relative;
}
#search label {
	display: none;
}
#search input {
	display: block;
	width: 210px;
	height: 30px;
	line-height: 30px;
	border: 0;
	background-color: transparent;
	margin: 0;
	padding: 0 0 0 10px;
	font-size: 14px;
}
#search button {
	position: absolute;
	top: 0;
	right: 0;
	display: block;
	float: left;
	width: 30px;
	height: 30px;
	text-indent: -10000px;
	overflow: hidden;
	background-color: transparent;
	background-image: none;
	border: 0;
}
#search button:after {
	position: absolute;
	top: 3px;
	left: 3px;
	display: block;
	width: 24px;
	height: 24px;
	text-align: center;
	line-height: 24px;
	text-indent: 0;
	background-color: #796C6C;
	border-radius: 24px;
	color: #FFFFFF;
	font-family: 'Glyphicons Halflings';
	font-size: 14px;
	content: '\E003';
}
#search-results {
}
#search-results ul {
	list-style: square;
	margin: 0.5em 0 0.5em 2em;
	padding: 0;
}
#auto-search {
	display: block;
	height: 30px;
	line-height: 30px;
	margin: 0;
	padding: 3px 10px 0 10px;
	box-shadow: inset 0 5px 5px rgba(0,0,0,0.1);
	white-space: nowrap;
}
#auto-search input {
	margin: 0;
	line-height: inherit;
}
#auto-search label {
	position: relative;
	top: -2px;
	margin: 0;
	line-height: inherit;
	font-weight: normal;
	font-size: 12px;
}

/*
 * CONSOLE
 */
#console {
	position: relative;
}
#console:after {
	content: '';
	display: block;
	clear: both;
}
#console .console-item {
	float: left;
	height: 50px;
	line-height: 50px;
	margin-left: 10px;
}
#category-selector select,
#category-selector option,
#ymd-picker input,
#today-only-switch {
	height: 2.8em;
	line-height: 2.8em;
}
#today-only-switch input,
#today-only-switch label {
}
#today-only-switch label {
	position: relative;
	top: -2px;
	font-weight: normal;
	font-size: 12px;
}
#share-this-site {
	position: absolute;
	top: 50%;
	right: 10px;
	margin-top: -19px;
}
#share-this-site h3 {
	display: none;
}
/*
 * SHARE, General
 */
.share * {
	box-sizing: content-box;
}
.share ul {
	list-style: none;
	margin: 0;
	padding: 0;
}
.share ul:after {
	content: '';
	display: block;
	clear: both;
}
.share ul li {
	float: left;
	margin: 0;
	padding: 0;
}
.share ul li + li {
	margin-left: 0.25em;
}
.share ul li a {
	display: block;
}
.share ul li a:hover {
	text-decoration: none;
}
.share ul li a span {
	display: none;
}
.share ul li a:after {
	display: block;
	width: 38px;
	height: 38px;
	line-height: 32px;
	text-align: center;
	border-width: 3px;
	border-style: solid;
	border-radius: 32px;
	border-color: #333333;
	background-color: #FFFFFF;
	color: #333333;
	font-size: 16px;
	font-family: 'social';
}
.share ul li.twitter a:after {
	content: '\E605';
}
.share ul li.twitter a:hover:after {
	border-color: #55ACEE;
	color: #55ACEE;
}
.share ul li.facebook a:after {
	content: '\E604';
}
.share ul li.facebook a:hover:after {
	border-color: #3B5998;
	color: #3B5998;
}
.share ul li.googleplus a:after {
	content: '\E603';
}
.share ul li.googleplus a:hover:after {
	border-color: #D23D29;
	color: #D23D29;
}


/*
 * MAIN
 */
#main-header {
	border-top: 1px solid #CCCCCC;
}
#main-header:after {
	content: '';
	display: block;
	clear: both;
}
#main-header h2 {
	float: left;
	height: 50px;
	line-height: 50px;
	margin: 0;
	padding: 0 10px;
	font-size: 24px;
	color: #9D8E8E;
}
#main {
	border-top: 1px solid #CCCCCC;
}

/*
 * EVENTS
 */
.event {
	color: #796C6C;
}
.event + .event {
	border-top: 1px solid #FFFFFF;
	border-bottom: 1px solid #CCCCCC;
}
.event:after {
	content: '';
	display: block;
	clear: both;
}
.event * {
	box-sizing: border-box;
}
.event .button, 
.event .button:link,
.event .button:visited {
	display: inline-block;
	width: 100%;
	padding: 8px 0;
	border-style: solid;
	border-width: 1px;
	border-radius: 3px;
	font-size: 18px;
	text-align: center;
	text-decoration: none;

	box-shadow: 3px 3px 3px rgba(0,0,0,0.2);
	background-color: #F497A0;
	border-color: #FFFFFF;
	color: #FFFFFF;
}
.event .button:hover {
	background-color: #F9F5F2;
	border-color: #F9F5F2;
	color: #9D8E8E;
}
.event .button:active {
	position: relative;
	top: 3px;
	left: 3px;
	box-shadow: none;
	background-color: #F9F5F2;
	border-color: #F9F5F2;
	color: #7C89A3;
}
.event .event-feature {
}
.event .event-feature > * {
	display: block;
	height: 40px;
	line-height: 40px;
}
.event .event-feature .event-category {
	margin-left: 10px;
}
.event .event-feature .event-category i {
	margin-right: 0.25em;
}
.event .event-header {
	position: relative;
	min-height: 150px;
	border-left: 150px solid #FFD1B8;
}
.event .event-header:after {
	content: '';
	display: block;
	clear: both;
}
.event .event-header .event-meta {
	position: absolute;
	top: 0;
	left: -150px;
	width: 150px;
	height: 150px;
	margin: 0;
	padding: 0;
	color: #3D3D3D;
}
.event .event-header .event-meta .event-date,
.event .event-header .event-meta .event-time {
	box-sizing: border-box;
	position: absolute;
	left: 20px;
	width: 110px; /* width of .event-meta - horizontal padding */
	height: 55px;
	line-height: 1.4;
	margin: 0;
	padding: 15px 0 0 0;
	text-align: center;
	font-size: 16px;
	font-weight: bold;
}
.event .event-header .event-meta .event-date {
	top: 20px;
	border-bottom: 1px solid #333333;
}
.event .event-header .event-meta .event-time {
	top: 75px;
	border-top: 1px solid #333333;
}
.event .event-header .event-info {
	position: relative;
	min-height: inherit;
	padding: 20px 20px 50px 20px;
}
.event .event-header .event-info .event-title {
	margin: 0 150px 0 0;
	padding: 0;
	font-size: 25px;
	line-height: 1.4;
}
.event .event-header .event-info .event-title a {
	color: inherit;
	text-decoration: none;
}
.event .event-header .event-info .event-location {
	position: absolute;
	bottom: 20px;
	left: 0;
	margin: 0 150px 0 0;
	padding: 0 20px;
}
.event .event-header .event-info .event-location:before {
	display: inline;
	width: 1em;
	height: 1em;
	line-height: 1em;
	text-align: center;
	margin-right: 0.25em;
	font-family: 'Glyphicons Halflings';
	content: '\E062';
}
.event .event-share {
	position: absolute;
	top: 20px;
	right: 20px;
}
.event .event-share h4 {
	display: none;
}
.event .event-console {
	margin: 0 150px 0 0;
	padding: 20px;
}
.event .event-console button.to-contact {
}

.event .event-body {
	line-height: 1.6;
}
.event .event-body .event-content-feature {
}
.event .event-body .event-content-feature * {
	width: 100%;
	height: auto;
}
.event .event-body .block {
	padding: 20px;
}
.event .event-body .block-wide {
}
.event .event-body .block-narrow {
	max-width: 350px;
	margin: 0 auto;
}
.event .event-body .event-content {
}
.event .event-body .event-content * {
	max-width: 100%;
}
.event .event-body .event-calendar {
	margin-top: 100px;
}
.event .event-body .event-contact {
	margin-top: 100px;
}
.event .event-body .event-map {
	width: 100%;
	height: 400px;
}

/*
 * EVENT LIST
 */
.event-list {
	cursor: pointer;
}
.event-list.hover .event-header {
	background-color: #796C6C;
	border-color: #FAC6B6;
	color: #FFFFFF;
}
.event-list .event-header .event-info .event-title {
	margin-right: 0;
	height: 70px;
	overflow: hidden;
	text-overflow: ellipsis;
}
.event-list .event-header .event-info .event-location {
	margin-right: 0;
}
.event-more {
}
.event-more a {
	box-sizing: border-box;
	display: block;
	width: auto;
	height: 50px;
	text-align: center;
	line-height: 50px;
	margin: 30px;
	background-color: #DDDDDD;
	border: 1px solid #AAAAAA;
	border-radius: 3px;
	color: #666666;
	text-decoration: none;
}
.event-more a:hover {
	background-color: #CCCCCC;
	border-color: #999999;
	color: #000000;
}
/*
 * EVENT DETAILS
 */
.event-detail {
	width: 640px;
}
.event-detail .event-header {
	background-color: #F497A0;
	color: #FFFFFF;
}
.event-detail.event-has-no-contact .event-console,
.event-detail.event-has-no-contact .event-contact {
	display: none;
}

/*
 * Contact form
 */
.event-contact-form {
	padding-bottom: 100px;
}
.event-contact-form * {
	box-sizing: border-box;
}
.event-contact-form .legend {
	text-align: center;
}
.event-contact-form .legend span {
	display: inline-block;
	margin: 0 auto;
	padding: 1em 0.5em;
	border-top: 2px solid #5F5656;
	border-bottom: 2px solid #5F5656;
}
.event-contact-form > p.help {
	margin: 20px 0;
	text-align: center;
}
.event-contact-form form div {
	position: relative;
}
.event-contact-form form div + div {
	margin-top: 20px;
}
.event-contact-form form div label {
	position: absolute;
	top: 0;
	left: 0;
	display: block;
	width: 30%;
	color: #000000;
}
.event-contact-form form div input,
.event-contact-form form div textarea,
.event-contact-form form div p {
	display: block;
	width: 70%;
	margin: 0 0 0 30%;
}
.event-contact-form form div input,
.event-contact-form form div textarea {
	border: 1px solid #A9A9A9;
	border-radius: 3px;
}
.event-contact-form form div textarea {
	height: 5em;
}
.event-contact-form .button,
.event-contact-form .button:link,
.event-contact-form .button:visited {
	background-color: #EEEEEF;
	border-color: #FFFFFF;
	color: #BBBDBF;
}
.event-contact-form .button:hover {
	background-color: #FBDBDE;
	border-color: #FFFFFF;
	color: #9D8E8E;
}
.event-contact-form .button:active {
	background-color: #FBDBDE;
	border-color: #FFFFFF;
	color: #BBBDBF;
}
.event-contact-form .button.cancel {
	display: none;
}

/*
 * Calendar
 */
.clndr,
.clndr * {
	box-sizing: border-box;
	color: #F497A0;
}
.clndr {
	display: inline-block;
	width: 100%;
	padding-bottom: 3px;
	border-bottom: 2px solid #F497A0;
}
.clndr:after {
	content: '';
	display: block;
	clear: both;
}
.clndr .controls {
	float: right;
	margin-bottom: 10px;
	font-size: 16px;
}
.clndr .controls .clndr-previous-button,
.clndr .controls .month,
.clndr .controls .clndr-next-button {
	float: left;
	height: 2em;
	line-height: 2em;
	margin: 0;
	padding: 0 0.5em;
	text-align: center;
}
.clndr .controls .clndr-previous-button,
.clndr .controls .clndr-next-button {
	cursor: pointer;
}
.clndr .controls .clndr-previous-button:hover,
.clndr .controls .clndr-next-button:hover {
	color: #000000;
}
.clndr .controls .month {
	border-bottom: 2px solid #F497A0;
	text-align: center;
}
.clndr .days-container {
	clear: both;
}
.clndr .days-container:after {
	content: '';
	display: block;
	clear: both;
}
.clndr .days-container .days {
	border-bottom: 1px solid #F497A0;
}
.clndr .days-container .days:after {
	content: '';
	display: block;
	clear: both;
}
.clndr .days-container .days .day-header,
.clndr .days-container .days .day {
	float: left;
	width: 14.28%;
	text-align: center;
	border-top: 1px solid #F497A0;
}
.clndr .days-container .days .day-header {
	height: 3em;
	line-height: 3em;
	margin-bottom: 3px;
	border-top: 1px solid #F497A0;
	border-bottom: 2px solid #F497A0;
}
.clndr .days-container .days .day {
	height: 5em;
}
.clndr .days-container .days .day span {
	display: inline-block;
	width: 3em;
	height: 3em;
	line-height: 3em;
	text-align: center;
	margin-top: 1em;
	border-radius: 3em;
}
.clndr .days-container .days .day.adjacent-month span {
	display: none;
}
.clndr .days-container .days .day.today {
	background-color: #E0E0E0;
	font-weight: bold;
}
.clndr .days-container .days .day.event span {
	background-color: #F497A0;
	color: #FFFFFF;
}
.clndr .days-container .days .day.calendar-dow-0 {
	clear: left;
}
.clndr .days-container .days .headers {
}


/*
 * FOOTER
 */

/*
 * OVERLAY
 */
html body .fancybox-overlay {
	overflow: hidden !important;
}
html body a.fancybox-close {
	box-sizing: content-box;
	top: 24px;
	right: -15px;
	width: 24px;
	height: 24px;
	text-align: center;
	line-height: 24px;
	border-radius: 24px;
	border: 3px solid #666666;
	background-color: #FFFFFF;
	background-image: none;
	text-decoration: none;
	color: #666666;
}
html body a.fancybox-close:before {
	box-sizing: content-box;
	display: block;
	width: inherit;
	height: inherit;
	text-align: inherit;
	line-height: inherit;
	color: inherit;
	font-family: 'Glyphicons Halflings';
	font-size: 18px;
	content: '\E014';
}
html body a.fancybox-close:hover {
	border-color: #000000;
	color: #000000;
}
